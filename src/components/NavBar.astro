---
import "../styles/global.css";
import { Picture } from "astro:assets";

import headshot from "../assets/png/headshot-2025-v1.png";
---

<nav
    class="bg-wanderer-300 fixed z-10 h-auto min-h-full w-[312px] translate-x-0 transform space-y-8 px-8 py-12 transition-transform duration-300 ease-in-out"
>
    <a
        href="/"
        class="font-signature text-wanderer-100 flex justify-center text-[2.5rem] font-extrabold transition ease-in-out hover:scale-[101%]"
        >Amy M. Liu</a
    >
    <div></div>
    <div class="">
        <div class="mx-4 overflow-hidden">
            <Picture
                src={headshot}
                formats={["png"]}
                alt="headshot-2025-v1"
                class="h-full w-full rounded-full object-cover"
            />
        </div>
    </div>

    <ul class="space-y-4 font-medium">
        <li><a href="#about" class="hover:underline">About</a></li>
        <li><a href="#projects" class="hover:underline">Projects</a></li>
    </ul>
</nav>

<button
    id="nav-toggle"
    class="bg-wanderer-100 text-wanderer-300 fixed top-4 left-4 z-20 rounded p-2"
    aria-label="Toggle navigation"
    aria-expanded="true"
>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
    >
    </svg>
</button>

<script>
    import toggleButton from "./NavButton.ts";

    toggleButton();
</script>
